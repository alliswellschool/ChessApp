rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Don't allow profile deletion via client
    }
    
    // User progress/scores - Main progress tracking
    match /userProgress/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
      
      // Subcollection for individual puzzle progress
      match /puzzles/{puzzleType} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId);
      }
    }
    
    // Quiz results
    match /quizResults/{resultId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
    
    // Donations collection - IMPORTANT: Prevent fraud!
    match /donations/{donationId} {
      // Anyone can read donations (for transparency)
      allow read: if true;
      
      // Only allow writes if:
      // 1. User is authenticated OR it's marked as anonymous
      // 2. Amount is reasonable (between 10 and 100000)
      // 3. Has required fields
      allow create: if (isSignedIn() || request.resource.data.userId == 'anonymous')
                    && request.resource.data.amount >= 10
                    && request.resource.data.amount <= 100000
                    && request.resource.data.paymentId is string
                    && request.resource.data.timestamp is timestamp;
      
      // Nobody can update or delete donations
      allow update, delete: if false;
    }
  }
}
